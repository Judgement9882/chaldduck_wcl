<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerResult">

    <TextView
        android:id="@+id/exer_result"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#4E7BEF"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="운동 결과"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textScaleX="1"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/exer_exit"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#C14E4E"
        android:text="홈 화면으로 이동"
        android:textSize="30dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/text_kind"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="운동 종류"
        android:textSize="25dp"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textAlignment="center"


        app:layout_constraintBottom_toTopOf="@+id/text_set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exer_result" />

    <TextView
        android:id="@+id/text_set"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="운동 세트"
        android:textSize="25dp"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textAlignment="center"

        app:layout_constraintBottom_toTopOf="@+id/text_rep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_kind"
        app:layout_constraintVertical_bias="0.511" />



    <TextView
        android:id="@+id/text_rep"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:text="총 운동 횟수"
        android:textSize="25dp"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textAlignment="center"

        app:layout_constraintBottom_toTopOf="@+id/exer_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_set"
        app:layout_constraintVertical_bias="0.934" />

</androidx.constraintlayout.widget.ConstraintLayout>